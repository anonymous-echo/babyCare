server:
  port: 8080
  mode: debug
  read_timeout: 30
  write_timeout: 30
  base_url: ""

database:
  host: localhost
  port: 5432
  user: postgres
  password: ""
  dbname: nutri_baby
  sslmode: disable
  timezone: Asia/Shanghai
  max_open_conns: 100
  max_idle_conns: 10
  conn_max_lifetime: 3600

redis:
  host: localhost
  port: 6379
  password: ""
  db: 0
  pool_size: 100

jwt:
  secret: your-secret-key
  expire_hours: 72

log:
  level: info
  filename: logs/app.log
  max_size: 100
  max_backups: 3
  max_age: 7
  compress: true

upload:
  max_size: 10485760
  allowed_types:
    - image/jpeg
    - image/png
    - image/gif
  storage_path: uploads/

wechat:
  app_id: ""
  app_secret: ""
  subscribe_templates:
    breast_feeding_reminder: ""
    bottle_feeding_reminder: ""
    food_feeding_reminder: ""
    vaccine_reminder: ""

ai:
  provider: gemini
  gemini:
    api_key: ""
    base_url: ""
    model: gemini-1.5-flash
  analysis:
    timeout: 30
    retry_count: 3
    batch_size: 10
    cache_ttl: 3600